{% extends 'ITRLibraryBundle::layout.html.twig' %}

{% block content %}
    <h1>
        {{ 'edit_post'|trans }}
        <div class="pull-right">
            <a class="btn btn-info" href="{{ path('post_index') }}">{{ 'back_to_index'|trans }}</a>
            <a class="btn btn-warning" data-url="{{ path('post_delete', {'id': post.id}) }}" class="js-modal-toggle" data-toggle="modal" data-target="#confirmDelete" data-title="{{ 'delete_title'|trans }}" data-message="{{ 'delete_message'|trans }}">
                {{ 'delete'|trans }}
            </a>
        </div>
    </h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" class="btn btn-primary" value="{{ 'save'|trans }}" />
    {{ form_end(edit_form) }}
{% endblock %}
