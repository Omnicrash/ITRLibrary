<h2>{{ 'weekly_mail_title'|trans }}</h2>

<ul>
    {% for post in posts %}
        <li>
            <h3><a href="{{ post.url }}">{{ post.title }} {% if post.writtenAt %}({{ post.writtenAt | date('d-m-Y') }}){% endif %}</a></h3>
            <small>
                {{ 'added_on'|trans }} {{ post.createdAt | date('d-m-Y') }}{% for tag in post.tags %}{% if loop.first %} - {% endif %}{{ tag }}{% if not loop.last %}, {% endif %}{% endfor %}
            </small><br/>
            <small>
                {{ 'votes'|trans }}: {{ post.votes }}
            </small>
        </li>
    {% endfor %}
</ul>